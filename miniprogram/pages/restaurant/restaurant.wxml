			<view class="cu-bar justify-end bg-white-yellow">
				<view class="content">规则</view>
				<view class="action" bindtap="hideRestaurantModal">
					<text class="cuIcon-close text-red"></text>
				</view>
			</view>
			<view class="padding-xl bg-white-yellow">
				此处放规则
			</view>
		</view>
	</view>
		</view>
