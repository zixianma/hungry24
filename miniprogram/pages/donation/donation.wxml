<view>
  <image src="https://hunger24.cfpa.org.cn/images/新海报.jpg" style="width:100vw; height:62.685vh;"></image>
  <view class="cu-bar justify-center bg-white">
    <view class="sub-title">
      <text class="text-xl text-bold warm-yellow">项目介绍</text>
      <text class="bg-warm-yellow" style="width:2rem"></text>
    </view>
  </view>
  <image src="https://hunger24.cfpa.org.cn/images/donation_intro.jpeg" style="width:100vw; height:375.115vh"></image>
  <view class="cu-bar tabbar border shop text-center">
    <view class="action">
      <button class="bg-red submit" bindtap="showModal" data-modal-name="pay" style="width:100vw;margin-left:auto;margin-right:auto; position:fixed;bottom:0;">捐一餐</button>
    </view>
    <view class="cu-modal bottom-modal {{modalName == 'pay' ? 'show' : ''}}">
      <view class="cu-dialog">
        <view class="padding-xl" style="text-align: left">
          请输入您想捐赠的金额：
          <view class="flex-sub">
            <view class="solid-bottom text-xl padding">
              <view class="cu-form-group margin-top">
                <input placeholder="请填写1以上的整数" bindinput="onInput"></input>
              </view>
            </view>
            <!-- <view class="padding" style="text-align:left;">*一日餐费约为4元</view> -->
          </view>
        </view>
        <view class="cu-bar text-lg bg-white-yellow" >
          <view class="text-red"  bindtap="hideModal"><text class="text-bold" style="text-size:10rem; margin-left:25rpx" >取消</text></view>
          <view class="text-yellow" bindtap="toPay" ><text class="text-bold" style="text-size:10rem; margin-right:25rpx">确认</text></view>
        </view>
      </view>
    </view>
  </view>
</view>